{
    "name": "netzbewegung/nb-headless-content-blocks",
    "type": "typo3-cms-extension",
    "description": "Connects together EXT:headless and EXT:content_block",
    "keywords": [
        "TYPO3",
        "headless",
        "content_block",
        "json"
    ],
    "license": [
        "GPL-2.0-or-later"
    ],
    "authors": [
        {
            "name": "Uwe Raabe",
            "role": "Developer"
        },
        {
            "name": "Christoph Freund",
            "role": "Developer"
        },
        {
            "name": "Jana Deharde",
            "role": "Developer"
        },
        {
            "name": "Steffen Maechtel",
            "role": "Developer"
        },
        {
            "name": "Carsten Wilhelm",
            "role": "Developer"
        }
    ],
    "config": {
        "preferred-install": {
            "typo3/cms-core": "source",
            "*": "dist"
        },
        "vendor-dir": ".Build/vendor",
        "bin-dir": ".Build/bin",
        "sort-packages": true,
        "allow-plugins": {
            "typo3/class-alias-loader": true,
            "typo3/cms-composer-installers": true
        }
    },
    "require": {
        "typo3/cms-core": "^13.4",
        "friendsoftypo3/content-blocks": ">=1.2.3",
        "friendsoftypo3/headless": "^4.5"
    },
    "require-dev": {
		"bnf/phpstan-psr-container": "^1.0.1",
		"friendsofphp/php-cs-fixer": "^3.22",
		"friendsoftypo3/phpstan-typo3": "^0.9.0",
		"phpstan/phpstan": "^1.10.22",
		"phpstan/phpstan-phpunit": "^1.3.13",
		"typo3/cms-extbase": "^13.4.5",
		"typo3/cms-extensionmanager": "^13.4.5",
		"typo3/cms-filelist": "^13.4.5",
		"typo3/cms-install": "^13.4.5",
		"typo3/cms-lowlevel": "^13.4.5",
		"typo3/cms-rte-ckeditor": "^13.4.5",
		"typo3/cms-tstemplate": "^13.4.5",
		"typo3/cms-workspaces": "^13.4.5",
		"typo3/coding-standards": "^0.8",
        "typo3/testing-framework": "^9"
    },
    "autoload": {
        "psr-4": {
            "Netzbewegung\\NbHeadlessContentBlocks\\": "Classes"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Netzbewegung\\NbHeadlessContentBlocks\\Tests\\": "Tests/",
            "TYPO3\\CMS\\Core\\Tests\\": ".Build/vendor/typo3/cms-core/Tests/"
        }
    },
    "scripts": {
        "pre-update-cmd": [
            "[ -d \".Build\" ] || mkdir .Build"
        ],
        "pre-autoload-dump": [
            "[ -d \"config\" ] || cp -a ./Build/config.example ./config"
        ],
        "tests": [
            "Build/Scripts/runTests.sh -s cgl",
            "Build/Scripts/runTests.sh -s phpstan",
            "Build/Scripts/runTests.sh -s unit",
            "Build/Scripts/runTests.sh -s functional"
        ]
    },
    "extra": {
        "typo3/cms": {
            "web-dir": ".Build/public",
            "extension-key": "nb_headless_content_blocks"
        }
    }
}
